
func z_function(str) {
	var n = str.size();
	var z = Array(); z.resize(n);
	z[0] = 0;

	var l = 0, r = 0;
	for (var i = 1; i < n; i+=1) {
		if (i >= r) {
			l = i; r = i;
			while (r < n && str[r - l] == str[r]) r+= 1;
			z[i] = r - l;
		} else {
			if (i + z[i - l] < r) {
				z[i] = z[i - l];
			} else {
				l = i;
				while (r < n && str[r - l] == str[r]) r+=1;
				z[i] = r - l;
			}
		}
	}
	return z;
}
