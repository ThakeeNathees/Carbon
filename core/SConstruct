#!python
import os
Import('env')

# project includes
env.add_include_dir('var.h')
#env.add_include_dir('glm')
#env.add_include_dir('stb_image')

# core env
env_core = env.Clone()
env_core.Append(CPPDEFINES=[]) # predefined macros
env_core.Append(CPPPATH=[])    # include files
env_core.Append(LIBPATH=[])    # static lib dir
env_core.Append(LIBS=[])       # static libs
env.core_source = []           # source files

# collect obj files
env.core_source += ['var.h/var.cpp']
#SConscript('glfw/SConstruct')
#SConscript('glad/SConstruct')
#SConscript('ImGui/SConstruct')

# make library
lib = env_core.StaticLibrary(
        'bin/' + 'core' + env_core['out_suffix'], 
        env.core_source
    )
env.Prepend(LIBS=[lib])