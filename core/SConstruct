#!python
import os
Import('cbenv')

## project includes
cbenv.Append(CPPPATH=[Dir("./")])

## core env
env_core = cbenv.Clone()
env_core.SOURCES = [

    Glob('*.cpp'),
    Glob('error/*.cpp'),
    Glob('internal/*.cpp'),
    Glob('builtin/*.cpp'),
    Glob('binary/*.cpp'),

    Glob('tokenizer/*.cpp'),
    Glob('parser/*.cpp'),
    Glob('analyzer/*.cpp'),
    Glob('analyzer/expression/*.cpp'),
    Glob('codegen/*.cpp'),
    Glob('compiler/*.cpp'),
    Glob('vm/*.cpp'),

]

##Export('env_core')
##SConscript('parser/SConstruct')

cbenv.SOURCES += env_core.SOURCES